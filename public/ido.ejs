<section class="bg-white border-bottom tokenInfo" style="margin-bottom:30px; padding-top:15px; padding-bottom:15px;">
    <div class="container">
    	<h4><%= token.name %> IDO Infomation</h4>
        <div class="nk-block nk-block-token">
            <div class="row align-items-center justify-content-between gutter-vr-30px">
                <div class="col-lg-6">
                    <div class="row gutter-vr-30px">
                        <div class="col-sm-6">
                            <div class="stage-info">
                                <h6 class="title title-s6 title-xs-s2">Start</h6>
                                <p class="timestart">Feb 8, 2018 (9:00AM GMT)</p>
                            </div>
                        </div><!-- .col  -->
                        <div class="col-sm-6">
                            <div class="stage-info">
                                <h6 class="title title-s6 title-xs-s2">Number of tokens for sale</h6>
                                <p><span class="totalSub"></span> <%- token.name%> (<%= token.presell_rate%>)</p>
                            </div>
                        </div><!-- .col  -->
                        <div class="col-sm-6">
                            <div class="stage-info">
                                <h6 class="title title-s6 title-xs-s2">End</h6>
                                <p class="timeend">Feb 20, 2018 (11:00AM GMT)</p>
                            </div>
                        </div><!-- .col  -->
                        <div class="col-sm-6">
                            <div class="stage-info">
                                <h6 class="title title-s6 title-xs-s2">Tokens exchange rate</h6>
                                <p>1 BNB = <span class="price"></span> <%- token.name%></p>
                            </div>
                        </div><!-- .col  -->
                        <div class="col-sm-6">
                            <div class="stage-info">
                                <h6 class="title title-s6 title-xs-s2">Acceptable currencies</h6>
                                <p>BNB</p>
                            </div>
                        </div><!-- .col  -->
                        <div class="col-sm-6">
                            <div class="stage-info">
                                <h6 class="title title-s6 title-xs-s2">Minimal transaction</h6>
                                <p class="minpay">0.01 BNB</p>
                            </div>
                        </div><!-- .col  -->
                    </div><!-- .row  -->
                </div>
                <div class="col-lg-5">
                    <div class="token-status token-status-s5 bg-light-alt round no-bd">
                        <div class="token-box token-box-s3">
                            <div class="countdown-s3 countdown-s4 countdown" data-date="2021/08/10"></div>
                        </div>
                        <div class="token-action">
                            <a class="btn btn-md btn-round btn-grad" href="<%= token.contract %>">Token Contracts</a>
                        </div>
                        <ul class="icon-list">
                            <li><em class="fab fa-bitcoin"></em></li>
                            <li><em class="fas fa-won-sign"></em></li>
                            <li><em class="fab fa-cc-visa"></em></li>
                            <li><em class="fab fa-cc-mastercard"></em></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div><!-- .block @e -->
    </div>
</section>
