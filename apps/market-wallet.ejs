<div class="container">
	<div class="input-group input-group-lg mb-3">
	  <input type="text" class="form-control walletAddress" placeholder="Wallet Address" aria-label="Recipient's username" aria-describedby="button-addon2">
	  <div class="input-group-append">
	    <button class="btn btn-secondary" type="button" id="button-addon2">Load Item</button>
	  </div>
	</div>
</div>

<div class="container mb-3">
    <div class="row">
    <% items.forEach(function(data, index){ %>
        <div class="col-md-4 mb-3 col-12" id="plance">
            <div class="shadown border round">
            	<img src="<%=data.image%>" style="width:100%">

            	<div class="p-4">
            		<b>Name</b>
	            	<input type="text" class="form-control" placeholder="Name" value="<%=data.name%>">
	            	<b>Description</b>
	            	<textarea type="text" class="form-control" placeholder="Description"><%=data.description%></textarea>
            	</div>
            	<hr>

            	<div class="input-group mb-3 p-4">
				  <input type="text" class="form-control" placeholder="Price" aria-label="Recipient's username" aria-describedby="button-addon2">
				  <div class="input-group-append">
				    <button class="btn btn-primary btn-sm" type="button" id="button-addon2">SELL</button>
				  </div>
				</div>
            </div>
        </div>
    <%});%>
    </div>
</div>