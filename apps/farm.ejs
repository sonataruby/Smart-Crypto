
<section class="bg-white mb-4">

    <div class="mb-5">
    <%- include("./components/wallet-balance.ejs") %>
    </div>
    <div class="page-header">
        <div class="container mb-3">
        	<h3 class="d-flex justify-content-between"><div><em class="ikon ikon-cash border border-danger rounded p-2" style="margin-right:15px;"></em>Farm Pool <%= token.name%> - <%= token.name%> NFT</div><%if(token.contract){%><a href="https://bscscan.com/token/<%= token.contract%>" target="_bank" class="btn btn-md btn-block btn-primary">Contract</a><%}%></h3>
            
        </div>
    </div>

    <div class="container mb-3">
        <div class="row">
        <% items.forEach(function(data, index){ %>
            <div class="col-md-4 mb-3 col-12">
                <div id="plance" class="border round text-left p-3 <%- index == 0 ? 'border-primary' : "border-secondary"%> ">
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item d-flex justify-content-between" data-timestart="<%= data.startTime%>" data-period="<%= data.period%>"><b>Start Time:</b> <span><%= data.startTime%></span></li>
                      <li class="list-group-item d-flex justify-content-between"><b>End Time: </b><span data-timeend="<%= data.timeEnd%>"><%= data.timeEnd%></span></li>
                      <li class="list-group-item d-flex justify-content-between"><b>Period : </b><%- (data.period / 3600).toFixed(2) %> hour</li>
                      <li><hr></li>
                      <li class="list-group-item d-flex justify-content-between"><b>Total Reward : </b><%- data.totalReward%> <%= token.name%> </li>
                      <li class="list-group-item d-flex justify-content-between"><b>Pool Holder : </b><%- data.amount%> <%= token.name%> </li>
                      <li class="list-group-item d-flex justify-content-between"><b>APR : </b><%= data.apr%>% </li>
                      <li class="list-group-item d-flex justify-content-between"><b>Reward :</b> <%= Number(data.rewardDay).toFixed(2)%> <%= token.name%> / 1d </li>
                      <li class="list-group-item d-flex justify-content-between"><b>Reward NFT: </b><%= data.reward_nft%> NFT CAR</li>
                    </ul>
                    <hr>
                    <%- data.joinPool%>
                    
                </div>
            </div>
        <% }); %>
        </div>
    </div>

    <div class="container mb-3">
        <div class="card card-body border">
            <h4>Help play Farm CAR - CAR NFT</h4>
            1. You need <%=token.name%> in balance<br>
            2. Click join pool when open<br>
            3. Click claim get profit<br>
            4. Click Withdraw refund token balance<br>
        </div>
    </div>
    
</section>

<script src="/assets/js/countdown.js?ver=1930"></script>
<style>
#plance:hover{
    border-color:var(--red) !important;
    color:var(--primary);
}
</style>